<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/katsuna_qs_bg"
        android:elevation="@dimen/elevation"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <include layout="@layout/katsuna_qs_divider" />

        <!-- brightness -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/brightness_label_dark"
                style="@style/KatsunaText.Basic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/common_brightness_dark" />

            <TextView
                android:id="@+id/brightness_label_light"
                style="@style/KatsunaText.Basic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="@string/common_brightness_light" />

            <SeekBar
                android:id="@+id/brightness_seek_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/brightness_label_dark"
                android:layout_toStartOf="@id/brightness_label_light"
                android:paddingBottom="@dimen/qsettings_vert_padding"
                android:paddingTop="@dimen/qsettings_vert_padding" />

        </RelativeLayout>

        <!-- volume -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/common_volume_silent"
                style="@style/KatsunaText.Basic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/common_volume_silent" />

            <TextView
                android:id="@+id/common_volume_loud"
                style="@style/KatsunaText.Basic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="@string/common_volume_loud" />

            <SeekBar
                android:id="@+id/volume_seek_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/common_volume_silent"
                android:layout_toStartOf="@id/common_volume_loud"
                android:paddingBottom="@dimen/qsettings_vert_padding"
                android:paddingTop="@dimen/qsettings_vert_padding" />

        </RelativeLayout>

        <include layout="@layout/katsuna_qs_divider" />

        <!-- wifi -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:id="@+id/wifi_more_wrapper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="1dp">

                <ToggleButton
                    android:id="@+id/wifi_toggle"
                    style="@style/KatsunaText.Toggle.Expanded" />

                <Button
                    android:id="@+id/wifi_more"
                    style="@style/KatsunaText.More.LeftHanded" />

            </LinearLayout>

            <ImageView
                android:id="@+id/wifi_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_wifi_black_28dp" />

            <TextView
                android:id="@+id/wifi_label"
                style="@style/KatsunaText.Basic.Label.LeftHanded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/wifi_icon"
                android:layout_toEndOf="@id/wifi_more_wrapper"
                android:text="@string/kts_wifi" />

        </RelativeLayout>

        <include layout="@layout/katsuna_qs_divider_with_margin" />

        <!-- data -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:id="@+id/cellular_more_wrapper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="1dp">

                <ToggleButton
                    android:id="@+id/cellular_toggle"
                    style="@style/KatsunaText.Toggle.Expanded" />

                <Button
                    android:id="@+id/cellular_more"
                    style="@style/KatsunaText.More.LeftHanded" />

            </LinearLayout>

            <ImageView
                android:id="@+id/cellular_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_signal_cellular_4_bar_28dp" />

            <TextView
                android:id="@+id/cellular_label"
                style="@style/KatsunaText.Basic.Label.LeftHanded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/cellular_icon"
                android:layout_toEndOf="@id/cellular_more_wrapper"
                android:text="@string/kts_data" />

        </RelativeLayout>

        <include layout="@layout/katsuna_qs_divider_with_margin" />

        <!-- bluetooth -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:id="@+id/bluetooth_more_wrapper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="1dp">

                <ToggleButton
                    android:id="@+id/bluetooth_toggle"
                    style="@style/KatsunaText.Toggle.Expanded" />

                <Button
                    android:id="@+id/bluetooth_more"
                    style="@style/KatsunaText.More.LeftHanded" />

            </LinearLayout>

            <ImageView
                android:id="@+id/bluetooth_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_bluetooth_28dp" />

            <TextView
                android:id="@+id/bluetooth_label"
                style="@style/KatsunaText.Basic.Label.LeftHanded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/bluetooth_icon"
                android:layout_toEndOf="@id/bluetooth_more_wrapper"
                android:text="@string/kts_bluetooth" />

        </RelativeLayout>

        <include layout="@layout/katsuna_qs_divider_with_margin" />

        <!-- not disturb -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp">

            <ToggleButton
                android:id="@+id/zen_toggle"
                style="@style/KatsunaText.Toggle.Expanded.LeftHanded" />

            <ImageView
                android:id="@+id/zen_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_do_not_disturb_on_black_28dp" />

            <TextView
                android:id="@+id/zen_label"
                style="@style/KatsunaText.Basic.Label.LeftHanded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/zen_icon"
                android:layout_toEndOf="@id/zen_toggle"
                android:text="@string/not_disturb" />

        </RelativeLayout>

        <include layout="@layout/katsuna_qs_divider_with_margin" />

        <!-- aeroplane mode -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/flight_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_flight_28dp" />

            <ToggleButton
                android:id="@+id/flight_toggle"
                style="@style/KatsunaText.Toggle.Expanded.LeftHanded" />

            <TextView
                android:id="@+id/flight_label"
                style="@style/KatsunaText.Basic.Label.LeftHanded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/flight_icon"
                android:layout_toEndOf="@id/flight_toggle"
                android:text="@string/kts_flight" />

        </RelativeLayout>

        <include layout="@layout/katsuna_qs_divider_with_margin" />

        <!-- torch -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/flash_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_highlight_28dp" />

            <ToggleButton
                android:id="@+id/flash_toggle"
                style="@style/KatsunaText.Toggle.Expanded.LeftHanded" />

            <TextView
                android:id="@+id/flash_label"
                style="@style/KatsunaText.Basic.Label.LeftHanded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/flash_icon"
                android:layout_toEndOf="@id/flash_toggle"
                android:text="@string/kts_flash" />

        </RelativeLayout>

        <include layout="@layout/katsuna_qs_divider_with_margin" />

    </LinearLayout>


</LinearLayout>