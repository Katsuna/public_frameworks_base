<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/katsuna_toggles_wrapper_bg"
    android:orientation="horizontal"
    android:paddingBottom="6dp"
    android:paddingEnd="48dp"
    android:paddingStart="6dp"
    android:paddingTop="6dp">

    <ToggleButton
        android:id="@+id/wifi_minified_toggle"
        style="@style/KatsunaText.Toggle.Minified"
        android:textOff="@string/kts_wifi"
        android:textOn="@string/kts_wifi" />

    <ToggleButton
        android:id="@+id/cellular_minified_toggle"
        style="@style/KatsunaText.Toggle.Minified"
        android:layout_marginStart="1dp"
        android:textOff="@string/kts_data"
        android:textOn="@string/kts_data" />

    <ToggleButton
        android:id="@+id/bluetooth_minified_toggle"
        style="@style/KatsunaText.Toggle.Minified"
        android:layout_marginStart="1dp"
        android:textOff="@string/kts_bluetooth"
        android:textOn="@string/kts_bluetooth" />
</LinearLayout>