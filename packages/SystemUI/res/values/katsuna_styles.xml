<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="KatsunaText" parent="@android:style/TextAppearance">
        <item name="android:letterSpacing">@dimen/common_letter_spacing</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="KatsunaText.Basic">
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">28dp</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textColor">@color/common_black54</item>
    </style>

    <style name="KatsunaText.Basic.Label">
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:lines">1</item>
    </style>

    <style name="KatsunaText.Basic.Label.LeftHanded">
        <item name="android:gravity">end|center</item>
    </style>

    <style name="KatsunaText.Toggle">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="KatsunaText.Toggle.Minified">
        <item name="android:textSize">14sp</item>
        <item name="android:textOn">@string/common_on</item>
        <item name="android:textOff">@string/common_off</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="KatsunaText.Toggle.Expanded">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textOn">@string/common_on</item>
        <item name="android:textOff">@string/common_off</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:layout_width">@dimen/common_toggle_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="KatsunaText.Toggle.Expanded.LeftHanded">
        <item name="android:layout_alignParentEnd">false</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <style name="KatsunaText.More">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:background">@drawable/more_bg</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:drawableStart">@drawable/ic_settings_black38_28dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:maxWidth">@dimen/kts_more_width</item>
        <item name="android:paddingEnd">@dimen/kts_more_padding</item>
        <item name="android:paddingStart">@dimen/kts_more_padding</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:text">@string/common_more</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/common_black38</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="KatsunaText.More.LeftHanded">
        <item name="android:layout_marginStart">10dp</item>
    </style>

</resources>